spring:
  profiles:
    active: test
s3:
  bucket:
  region:
aws:
  access_key_id:
  secret_access_key:
default:
  recipient: xxxx@email.com
  sender: yyyy@email.com
jwt:
  expiration: 86400000
  secret: SequenciaDeCaracteresParaAssinarToken

--- ### TEST PROFILE
spring:
  profiles: test
  datasource:
    password: ""
    url: jdbc:h2:mem:testdb
    username: sa
  h2:
    console:
      enabled: true
      path: /h2-console
  jpa:
    properties:
      hibernate:
        format_sql: true
    show-sql: true

--- ### DEV PROFILE
spring:
  profiles: dev
  datasource:
    username: root
    password: root
    url: jdbc:mysql://localhost:3306/curso_spring
  jpa:
    hibernate:
      ddl-auto: none
    properties:
      hibernate:
        format_sql: true
    show-sql: true
  mail:
    host: smtp.gmail.com
    password: ""
    username: ""
    properties:
      mail:
        smtp:
          auth: true
          socketFactory:
            class: javax.net.ssl.SSLSocketFactory
            fallback: false
            port: 465
          ssl:
            enable: true
          starttls:
            enable: true

--- ### PROD PROFILE
spring:
  profiles: prod
  datasource:
    username:
    password:
    url:
  jpa:
    hibernate:
      ddl-auto: create
    properties:
      hibernate:
        format_sql: false
    show-sql: false
